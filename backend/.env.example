# Database
DATABASE_URL="postgresql://username:password@localhost:5432/spotx_dev?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email (for magic link authentication)
EMAIL_FROM="noreply@spotx.app"
EMAIL_SERVICE="gmail"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Cloudflare R2
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="spotx-uploads"
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_PUBLIC_URL="https://your-bucket.your-account-id.r2.cloudflarestorage.com"

# App Configuration
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:5173"
API_BASE_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Security
BCRYPT_SALT_ROUNDS="12"
MAGIC_LINK_EXPIRES_MINUTES="15"
